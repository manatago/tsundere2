{
  "name": "tsundere-calendar",
  "version": "1.0.0",
  "description": "ツンデレなカレンダーアプリケーション",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run electron-dev\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "webpack --config webpack.config.js",
    "watch:main": "tsc -w",
    "watch:renderer": "webpack --config webpack.config.js --watch",
    "electron-dev": "wait-on dist/main/main.js dist/renderer/index.html && electron .",
    "clean": "rimraf dist",
    "package": "npm run clean && npm run build && electron-builder build --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.tsundere.calendar",
    "productName": "TSUNDERE-CALENDAR",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "config/",
        "to": "config/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "src/assets/base_image.png"
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.5.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "googleapis": "^129.0.0",
    "openai": "^4.85.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
